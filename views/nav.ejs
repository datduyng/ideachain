  <script>

    $(document).ready(function() {
        $('.notification-list').slimScroll({height:'250px'});

        // Instantiate the Bloodhound suggestion engine
        const wildcard = '%QUERY',
              url = `https://ideachain.glitch.me/search/username?username=${wildcard}`;

        var users = new Bloodhound({
            datumTokenizer: function (datum) {
                return Bloodhound.tokenizers.whitespace(datum.value);
            },
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            remote: {
                url,
                wildcard,
                filter(users) {
                    console.log(users);
                    // Map the remote source JSON array to a JavaScript object array
                    return $.map(users, (movie) => {
                      return {
                        id: movie.id,
                        title: movie.username,
                        year: ''
                      };
                    });
                }
            },
            limit: 20
        });

        // Initialize the Bloodhound suggestion engine
        users.initialize();
        $('#nav-search-field').bind('typeahead:select', function(ev, suggestion) {
          console.log('Selection: ' + JSON.stringify(suggestion));
          window.location.href=`http://ideachain.glitch.me/personalinfo?user_id=${suggestion.id}`;
        });
        //https://github.com/twitter/typeahead.js/blob/master/doc/jquery_typeahead.md#custom-events
        // Instantiate the Typeahead UI
        $('#nav-search-field').typeahead({
          highlight: true,
          minLength: 1,
          hint: true
        }, {
            displayKey: 'title',
            source: users.ttAdapter(),
            limit: 10,
            templates: {
               notFound: '<div class="dropdown-header highlight text-center">No users found</div>',
                suggestion: function(movie) {
                  return `<div>${movie.title} <small class='text-muted'>( ${movie.year})</span></div>`;
                },
                footer: `<div class='tt-cursor'> <a href='https://google.com'>Show more...</a></div>`
            }
        });




    });
  </script>



